{% extends '@Admin/base.html.twig' %}
{% block title %}
    {{ parent() }} - New event
{% endblock %}

    {% block pageHeader %}
        <a href="{{ path('pediatre_new') }}">New Event</a>
    {% endblock %}
        {% block pageDescription %}
            list of events
        {% endblock %}
    {% block pageBreadcrumb %}
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="">Events List</li>
        <li class="active">add Event</li>
    {% endblock %}
    {% block link5State %} active {% endblock %}
    {% block link4State %} active {% endblock %}

{% block body %}
    
<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <p>
        <button type="submit" name="submit" value="save" class="btn btn-primary"> 
            Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        </button>
        <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info"> 
            Save and Add <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>

<div class="form-group">
    <a class="btn btn-default" href="{{ path('AdminEvent') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
</div>

</div>


{% endblock %}

