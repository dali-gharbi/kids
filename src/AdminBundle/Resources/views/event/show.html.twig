{% extends '@Admin/base.html.twig' %}
{% block title %}
    {{ parent() }} - event
{% endblock %}

    {% block pageHeader %}
        <a href="{{ path('AdminEvent_show', { 'id': event.id }) }}">Event</a>
    {% endblock %}
    {% block pageBreadcrumb %}
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="">List Event</li>
        <li class="active">info Event</li>
    {% endblock %}
    {% block link15State %} active {% endblock %}

{% block body %}
<div class="col-md-12">
<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ event.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ event.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Description</strong></p>
        <p>
            {{ event.description }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Date</strong></p>
        <p>
            {% if event.date %}{{ event.date|date('Y-m-d') }}{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('AdminEvent') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('AdminEvent_edit', { 'id':  event.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('AdminEvent_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('AdminEvent_delete', { 'id': event.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>

</div>
{% endblock %}

