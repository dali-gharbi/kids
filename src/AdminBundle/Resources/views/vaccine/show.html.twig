{% extends '@Admin/base.html.twig' %}

{% block title %}
    {{ parent() }} - vaccine
{% endblock %}

{% block body %}
    <br><br><br><br><br><br><br><br>


    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="page-header">
                <h2>   <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>  Vaccin : {{ vaccine.name}}</h2>
            </div>
            <div class="col-md-6">
                <p><strong>Nom :</strong></p>
                <p>
                    {{ vaccine.name }}
                </p>
            </div>
            <div class="col-md-6">
                <p><strong>Address :</strong></p>
                <p>
                    {{ vaccine.address.rue }}
                </p>
            </div>
            <div class="col-md-6">
                <p><strong>Age :</strong></p>
                <p>
                    {{ vaccine.age }} mois
                </p>
            </div>
            <div class="col-md-6">
                <p><strong>Description :</strong></p>
                <p>
                    {{ vaccine.description }}
                </p>
            </div>
            <div class="col-md-6">
                <p><strong>Effet Negatif :</strong></p>
                <p>
                    {{ vaccine.effetnegatif }}
                </p>
            </div>
        </div>
    </div>

    <hr/>


    <div class="form-group">
        <a class="btn btn-default" href="{{ path('vaccine') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list</a>
    </div>


{% endblock %}

