{% extends '@Admin/base.html.twig' %}

{% block title %}
{{ parent() }} - sharedExperience
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View sharedExperience <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="col-md-6 col-md-offset-3">
    <div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ sharedExperience.id }}
        </p>

    </div>

    <div class="col-md-6">
        <p><strong>Title</strong></p>
        <p>
            {{ sharedExperience.title }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Description</strong></p>
        <p>
            {{ sharedExperience.description }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Likes</strong></p>
        <p>
            {{ sharedExperience.likes }}
        </p>

    </div></div>
</div>
<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('sharedexperiences') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('sharedexperience_edit', { 'id':  sharedExperience.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('sharedexperience_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('sharedexperiences_delete', { 'id': sharedExperience.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

